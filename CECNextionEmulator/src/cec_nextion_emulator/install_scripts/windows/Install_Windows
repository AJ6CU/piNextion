$folder_name = "CEC"
$install_dir = Get-Location

$wheel = "cec_nextion_emulator-0.1.0-py3-none-any.whl"
$startscript = "cecNext"

$default_ini_file = "defaultCECNextionEmulator.ini"
$target_ini_file = ".CECNextionEmulator.ini"

$full_wheel_path = Join-Path $install_dir $wheel
$full_startscript_path = Join-Path $install_dir $startscript
$full_default_ini_file_path = Join-Path $install_dir $default_ini_file

python -m venv "$HOME\$folder_name"
Set-Location "$HOME\$folder_name\Scripts"

# Activate the virtual environment
& .\Activate.ps1

pip install $full_wheel_path

Copy-Item $full_startscript_path "$HOME\$folder_name\Scripts\$startscript"
Copy-Item $full_default_ini_file_path "$HOME\$target_ini_file"